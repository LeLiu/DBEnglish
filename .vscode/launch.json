    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python调试: 当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "justMyCode": true,  // 只调试用户代码
            "stopOnEntry": true  // 在程序入口处暂停
        }
    ]
}